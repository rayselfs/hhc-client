{
  "name": "hhc-client",
  "version": "1.0.14",
  "description": "A desktop application based on Electron + Vue 3, providing timer, Bible reader, and projection features for churches and religious activities",
  "author": "rayselfs",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "main": "dist-electron/main.js",
  "repository": "github:rayselfs/hhc-client",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "electron:clean": "rm -rf dist",
    "electron:build:mac-intel": "npm run build && electron-builder --mac --x64 --config electron-builder.config.ts",
    "electron:build:mac-arm": "npm run build && electron-builder --mac --arm64 --config electron-builder.config.ts",
    "electron:build:mac-universal": "npm run build && electron-builder --mac --universal --config electron-builder.config.ts",
    "electron:build:win": "npm run build && electron-builder --win --x64 --config electron-builder.config.ts"
  },
  "dependencies": {
    "@fontsource-variable/noto-sans-tc": "^5.2.9",
    "@fontsource-variable/open-sans": "^5.2.7",
    "@fontsource-variable/roboto": "^5.2.8",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/vue-fontawesome": "^3.1.2",
    "@mdi/font": "^7.4.47",
    "@vueuse/core": "^13.9.0",
    "axios": "^1.12.2",
    "electron-updater": "^6.6.2",
    "idb": "^8.0.3",
    "normalize.css": "^8.0.1",
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-i18n": "^11.1.12",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vite-plugin-vuetify": "^2.1.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0",
    "vuetify": "^3.10.4"
  }
}
